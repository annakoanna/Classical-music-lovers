            <form id="new-form" action="/playlist" method="POST">
                <label>Playlist name:</label>
                <input type="text" name="playlist name">
                <input type="submit" value="Submit">
                 
                <div class="container-grid">
                    {% for song in composer.songs%}
                    <div>
                        <a href="/songs/{{forloop.index0}}">
                
                            <p>{{song.name}}
                            {{song.audio}}</p>
                <label>Add song:</label>
                <input type="checkbox" name="add song" checked>
                <input type="submit" value="Add Song">
              </form>
              
             
            
            
            
          
          
          
          <form action="/playlist/{{ song._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
          </form>
         
      </div>
{% endblock %}
